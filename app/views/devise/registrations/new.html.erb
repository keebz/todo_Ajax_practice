<div class="col-md-4">
  <h2>Sign up</h2>
  <div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :defaults => { :input_html => { :class => "form-group form-control" } }) do |f| %>
      <%= f.error_notification %>

      <div>
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, required: true, placeholder: ("#{@minimum_password_length} characters minimum" if @validatable) %>
        <%= f.input :password_confirmation, required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
        <button class="btn">
        <%= render "devise/shared/links" %>
        </button>
      </div>
    <% end %>
  </div>
</div>


